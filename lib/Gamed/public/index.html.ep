<!DOCTYPE html>
<html>
  <head>
    <title>Gamed</title>
  %= javascript 'http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js'
  %= javascript 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.1/jquery-ui.min.js'
  %= stylesheet 'http://code.jquery.com/ui/1.10.1/themes/le-frog/jquery-ui.css'
  %= javascript begin 
    var ws = new WebSocket('<%= url_for('websocket')->to_abs->scheme('ws') %>');
  %= end
  %= javascript '/js/client.js'
    <style>
      html, body { height: 100%; width: 100%; margin: 0; overflow: hidden; }
      #top { width: 100%; text-align: right; }
      #game { margin: 0; width: 100%; height: 80%; }
      #hud { width: 100%; height: 20%; }
      #chat { width: 100%; }
      #chat_input { width: 100%; }
    </style>
  </head>
  <body>
    <table height="100%" width="100%" cellspacing="0" cellpadding="0">
      <tr height="24">
        <td id="top" class="ui-state-default ui-corner-all">
            <%= $user %>
        </td>
      </tr>
      <tr width="100%">
        <td>
          <iframe seamless="seamless" id="game" src="<%= $game %>"></iframe>
          <div id="hud">
        <table height="100%" width="100%">
          <tr>
            <td colspan="2"><textarea id="chat"></textarea></td>
          </tr>
          <tr>
            <td><textarea id="chat_input" rows="2"></textarea></td>
            <td><input type="button" onClick="do_chat()" value="Send"></td>
          </tr>
        </table>
      </tr>
    </table>
  </body>
</html>
