<!DOCTYPE html>
<html>
  <head>
    <title>Gamed</title>
  %= javascript 'http://code.jquery.com/jquery-1.9.1.min.js'
  %= javascript begin 
    var ws = new WebSocket('<%= url_for('websocket')->to_abs->scheme('ws') %>');
  %= end
  %= javascript '/client.js'
    <style>
      html, body { height: 100%; width: 100%; margin: 0; overflow: hidden; }
      #top { border: thin solid black; }
      #game { margin: 0; width: 100%; height: 80%; border: thin solid blue; }
      #hud { width: 100%; height: 20%; border: thin solid red; }
      #chat { width: 100%; }
      #chat_input { width: 100%; }
    </style>
  </head>
  <body>
    <table height="100%" width="100%" cellspacing="0" cellpadding="0">
      <tr height="24">
        <td id="top">
          <span>
            <%= $user %>
          </span>
        </td>
      </tr>
      <tr width="100%">
        <td>
          <iframe id="game" src="<%= $game %>"></iframe>
          <div id="hud">
        <table height="100%" width="100%">
          <tr>
            <td colspan="2"><textarea id="chat"></textarea></td>
          </tr>
          <tr>
            <td><textarea id="chat_input" rows="2"></textarea></td>
            <td><input type="button" onClick="do_chat()" value="Send"></td>
          </tr>
        </table>
      </tr>
    </table>
  </body>
</html>
